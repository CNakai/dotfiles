Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

XTerm*pointerColor: #16A085
XTerm*faceSize: 14

Xcursor.theme: xcursor-breeze
Xcursor.size:                     0

XTerm*reverseVideo:               on
XTerm*faceName:                   Terminus:size=14:antialias=true
XTerm*selectToClipboard:          true


URxvt.iso14755:                   false
URxvt.iso14755_52:                false
URxvt.font:                       xft:Hack:size=14:Bold
URxvt.depth:                      32
URxvt.perl-ext-common:            default,resize-font,solarized


URxvt.solarized.default:          dark


URxvt.scrollBar:                  false
URxvt.mouseWheelScrollPage:       false
URxvt.cursorBlink:                true
URxvt.saveLines:                  5000

URxvt.keysym.C-1:                 solarized:toggle
URxvt.keysym.C-Up:                resize-font:bigger
URxvt.keysym.C-Down:              resize-font:smaller
URxvt.keysym.C-minus:             command:\000
URxvt.keysym.C-plus:              command:\000
URxvt.keysym.C-equal:             command:\000
