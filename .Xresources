Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

XTerm*pointerColor: #16A085
XTerm*faceSize: 14

Xcursor.theme: xcursor-breeze
Xcursor.size:                     0

XTerm*reverseVideo:               on
XTerm*faceName:                   Terminus:size=14:antialias=true
XTerm*selectToClipboard:          true


URxvt.iso14755:                   false
URxvt.iso14755_52:                false
URxvt.font:                       xft:Hack:size=14:Bold
URxvt.depth:                      32
URxvt.perl-ext-common:            default,resize-font,solarized

URxvt.keysym.C-j:		  resize-font:smaller
URxvt.keysym.C-k:		  resize-font:bigger

URxvt.keysym.C-s:                 perl:solarized:toggle
URxvt.solarized.default:          light



URxvt.scrollBar:                  false
URxvt.mouseWheelScrollPage:       false
URxvt.cursorBlink:                true
URxvt.saveLines:                  5000
